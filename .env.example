# Environment variables for deployment
# Copy to .env and fill in your values

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_PORT=5000
FLASK_HOST=0.0.0.0

# Security
SECRET_KEY=your-secret-key-here
API_KEY=your-api-key-here

# Model Configuration
MODEL_PATH=models/trained_model.pkl
DATA_PATH=data/
OUTPUT_PATH=output/
LOGS_PATH=logs/

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# CSV Processing
MAX_FILE_SIZE=100  # MB
MAX_ROWS=1000000

# Model Training
TEST_SIZE=0.2
RANDOM_STATE=42
MODEL_TYPE=random_forest

# Database (optional)
DATABASE_URL=sqlite:///ml_automation.db

# Monitoring
ENABLE_MONITORING=True
METRICS_PORT=9090
